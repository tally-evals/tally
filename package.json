{
  "name": "tally-monorepo",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/tally-evals/tally.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "apps/examples/*"
  ],
  "packageManager": "bun@1.2.22",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish",
    "tag": "changeset tag"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "bunup": "^0.16.17",
    "msw": "^2.12.1",
    "turbo": "^1.12.4"
  },
  "dependencies": {
    "ai": "^5.0.121",
    "zod": "^4.1.12"
  },
  "overrides": {
    "ai": "5.0.121",
    "@ai-sdk/google": "2.0.52"
  }
}

    "@faker-js/faker": "^10.2.0",
    "@mastra/core": "^0.24.9",
    "@mastra/evals": "^0.14.4",
    "@mastra/libsql": "^0.16.4",
    "@mastra/loggers": "^0.10.19",
    "@mastra/memory": "^0.15.13",
    "@tally-evals/core": "workspace:*",
    "@tally-evals/tally": "workspace:*",
    "@tally-evals/trajectories": "workspace:*",
    "dotenv": "^17.2.3",
    "zod": "^4"
  },
  "devDependencies": {
    "@tally-evals/typescript-config": "workspace:*",

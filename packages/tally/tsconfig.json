{
  "extends": "@tally/typescript-config/strict.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@tally/core/*": ["src/core/*"],
      "@tally/utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*", "debug/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}

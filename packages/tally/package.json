{
  "name": "@tally-evals/tally",
  "version": "0.1.0-alpha.1",
  "description": "A TypeScript evaluation framework for running model evaluations with datasets, evaluators, metrics, and aggregators",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "repository": {
    "type": "git",
    "url": "https://github.com/tally-evals/tally.git",
    "directory": "packages/tally"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./metrics": {
      "import": {
        "types": "./dist/metrics/index.d.mts",
        "default": "./dist/metrics/index.mjs"
      },
      "require": {
        "types": "./dist/metrics/index.d.cts",
        "default": "./dist/metrics/index.cjs"
      }
    },
    "./scorers": {
      "import": {
        "types": "./dist/scorers/index.d.mts",
        "default": "./dist/scorers/index.mjs"
      },
      "require": {
        "types": "./dist/scorers/index.d.cts",
        "default": "./dist/scorers/index.cjs"
      }
    },
    "./aggregators": {
      "import": {
        "types": "./dist/aggregators/index.d.mts",
        "default": "./dist/aggregators/index.mjs"
      },
      "require": {
        "types": "./dist/aggregators/index.d.cts",
        "default": "./dist/aggregators/index.cjs"
      }
    },
    "./normalization": {
      "import": {
        "types": "./dist/normalization/index.d.mts",
        "default": "./dist/normalization/index.mjs"
      },
      "require": {
        "types": "./dist/normalization/index.d.cts",
        "default": "./dist/normalization/index.cjs"
      }
    },
    "./data": {
      "import": {
        "types": "./dist/data/index.d.mts",
        "default": "./dist/data/index.mjs"
      },
      "require": {
        "types": "./dist/data/index.d.cts",
        "default": "./dist/data/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "evaluation",
    "llm",
    "ai",
    "testing",
    "metrics",
    "datasets"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tally-evals/core": "workspace:*",
    "ts-pattern": "^5.9.0"
  },
  "devDependencies": {
    "@ai-sdk/google": "^2.0.52",
    "@tally-evals/biome-config": "workspace:*",
    "@tally-evals/typescript-config": "workspace:*",
    "@types/bun": "latest",
    "@types/node": "24.6.2",
    "dotenv": "^17.2.3",
    "tsdown": "^0.20.0-beta.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}

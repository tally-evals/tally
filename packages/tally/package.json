{
  "name": "@tally-evals/tally",
  "version": "0.0.0",
  "description": "A TypeScript evaluation framework for running model evaluations with datasets, evaluators, metrics, and aggregators",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/tally-evals/tally.git",
    "directory": "packages/tally"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./metrics": {
      "types": "./dist/metrics/index.d.ts",
      "import": "./dist/metrics/index.mjs",
      "require": "./dist/metrics/index.js",
      "default": "./dist/metrics/index.mjs"
    },
    "./scorers": {
      "types": "./dist/scorers/index.d.ts",
      "import": "./dist/scorers/index.mjs",
      "require": "./dist/scorers/index.js",
      "default": "./dist/scorers/index.mjs"
    },
    "./aggregators": {
      "types": "./dist/aggregators/index.d.ts",
      "import": "./dist/aggregators/index.mjs",
      "require": "./dist/aggregators/index.js",
      "default": "./dist/aggregators/index.mjs"
    },
    "./normalization": {
      "types": "./dist/normalization/index.d.ts",
      "import": "./dist/normalization/index.mjs",
      "require": "./dist/normalization/index.js",
      "default": "./dist/normalization/index.mjs"
    },
    "./data": {
      "types": "./dist/data/index.d.ts",
      "import": "./dist/data/index.mjs",
      "require": "./dist/data/index.js",
      "default": "./dist/data/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "evaluation",
    "llm",
    "ai",
    "testing",
    "metrics",
    "datasets"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@ai-sdk/google": "^2.0.29",
    "@tally-evals/biome-config": "workspace:*",
    "@tally-evals/typescript-config": "workspace:*",
    "@types/node": "24.6.2",
    "@vitest/ui": "^1.1.0",
    "dotenv": "^17.2.3",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}

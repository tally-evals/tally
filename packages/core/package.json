{
  "name": "@tally-evals/core",
  "version": "0.1.0",
  "description": "Core types, configuration, and utilities for the Tally evaluation framework",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "repository": {
    "type": "git",
    "url": "https://github.com/tally-evals/tally.git",
    "directory": "packages/core"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "bun test",
    "test:unit": "bun test test/unit",
    "test:e2e": "bun test test/e2e",
    "test:watch": "bun test --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "clean": "rm -rf dist",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "tally",
    "evaluation",
    "llm",
    "ai",
    "core",
    "types"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.24.1"
  },
  "peerDependencies": {
    "@s2-dev/streamstore": "^0.21.0",
    "ai": "^5.0.121",
    "ioredis": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "@s2-dev/streamstore": {
      "optional": true
    },
    "ioredis": {
      "optional": true
    }
  },
  "devDependencies": {
    "@s2-dev/streamstore": "^0.21.0",
    "@tally-evals/biome-config": "workspace:*",
    "@tally-evals/typescript-config": "workspace:*",
    "@types/bun": "latest",
    "@types/node": "24.6.2",
    "ai": "^5.0.121",
    "dotenv": "^17.2.3",
    "ioredis": "^5.4.1",
    "tsdown": "^0.20.0-beta.3",
    "typescript": "^5.3.3"
  }
}
